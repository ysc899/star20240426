<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ui.bagsend.add.BagSendAddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topMenuLayout">

        <TextView
            android:id="@+id/textView01"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="접수일자"
            android:textColor="#FF545F71"
            android:textSize="12sp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/border_round_fill_rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvRecpDt"
            app:layout_constraintBottom_toBottomOf="@+id/tvRecpDt" />

        <TextView
            android:id="@+id/tvRecpDt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="90dp"
            android:paddingTop="5dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:background="@drawable/border_round_spinner_rect"
            android:text="2023년 08월 03일"
            android:textColor="@color/rowTextColor"
            app:layout_constraintStart_toEndOf="@+id/textView01"
            app:layout_constraintTop_toTopOf="parent"  />

        <TextView
            android:id="@+id/textView02"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="접수번호"
            android:textColor="#FF545F71"
            android:textSize="12sp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/border_round_fill_rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etRecpNo"
            app:layout_constraintBottom_toBottomOf="@+id/etRecpNo" />

        <EditText
            android:id="@+id/etRecpNo"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="80dp"
            android:paddingStart="10dp"
            android:background="@drawable/border_round_rect"
            android:hint=""
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textSize="15sp"
            android:text=""
            android:textColor="@color/rowTextColor"
            app:layout_constraintStart_toEndOf="@+id/textView02"
            app:layout_constraintTop_toBottomOf="@id/textView01" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:background="@drawable/n_btn_04"
            android:text="조회"
            android:textColor="#FFFFFF"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/etRecpNo"
            app:layout_constraintBottom_toBottomOf="@+id/etRecpNo" />

        <TextView
            android:id="@+id/textView03"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="고객번호"
            android:textColor="#FF545F71"
            android:textSize="12sp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/border_round_fill_rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvCustCd"
            app:layout_constraintBottom_toBottomOf="@+id/tvCustCd" />

        <TextView
            android:id="@+id/tvCustCd"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="90dp"
            android:paddingStart="10dp"
            android:text=""
            android:textColor="@color/rowTextColor"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/border_round_rect"
            app:layout_constraintStart_toEndOf="@+id/textView03"
            app:layout_constraintTop_toBottomOf="@id/textView02" />

        <TextView
            android:id="@+id/textView04"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="고객명"
            android:textColor="#FF545F71"
            android:textSize="12sp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/border_round_fill_rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvCustNm"
            app:layout_constraintBottom_toBottomOf="@+id/tvCustNm" />

        <TextView
            android:id="@+id/tvCustNm"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="90dp"
            android:paddingStart="10dp"
            android:text=""
            android:textColor="@color/rowTextColor"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/border_round_rect"
            app:layout_constraintStart_toEndOf="@+id/textView04"
            app:layout_constraintTop_toBottomOf="@id/textView03" />

        <TextView
            android:id="@+id/textView05"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="환자명"
            android:textColor="#FF545F71"
            android:textSize="12sp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/border_round_fill_rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPatnNm"
            app:layout_constraintBottom_toBottomOf="@+id/tvPatnNm" />

        <TextView
            android:id="@+id/tvPatnNm"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="90dp"
            android:paddingStart="10dp"
            android:text=""
            android:textColor="@color/rowTextColor"
            android:textSize="15sp"
            android:gravity="center"
            android:background="@drawable/border_round_rect"
            app:layout_constraintStart_toEndOf="@+id/textView05"
            app:layout_constraintTop_toBottomOf="@id/textView04" />

        <TextView
            android:id="@+id/textView06"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="요청유형"
            android:textColor="#FF545F71"
            android:textSize="12sp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/border_round_fill_rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spCpbgArvlLocCntrNm"
            app:layout_constraintBottom_toBottomOf="@+id/spCpbgArvlLocCntrNm" />

        <Spinner
            android:id="@+id/spCpbgArvlLocCntrNm"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="90dp"
            android:textColor="@color/rowTextColor"
            android:background="@drawable/border_round_spinner_rect"
            android:popupBackground="@drawable/btn_01"
            app:layout_constraintStart_toEndOf="@+id/textView06"
            app:layout_constraintTop_toBottomOf="@id/textView05"
            tools:ignore="NotSibling" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutIssu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="310dp"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/textView07"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="요청사항"
            android:textColor="#FF545F71"
            android:textSize="12sp"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/border_round_fill_rect"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nsvCustRqstIssu"/>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nsvCustRqstIssu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="90dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/border_round_rect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <EditText
                android:id="@+id/etCustRqstIssu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint=""
                android:padding="5dp"
                android:background="@android:color/transparent"
                android:imeOptions="actionDone"
                android:inputType="text|textMultiLine"
                android:scrollbars="vertical"
                android:textSize="15sp"
                android:minLines="20"
                android:text=""
                android:textColor="@color/rowTextColor"
                android:gravity="top"/>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:background="#ffffff"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/n_btn_05"
            android:text="취소"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnSave"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="70dp"
            android:layout_height="37dp"
            android:layout_marginStart="90dp"
            android:background="@drawable/n_btn_02"
            android:text="저장"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/n_bg_gradient"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/n_icon_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/notosansmedium"
            android:text="고객지원 등록"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageButton
            android:id="@+id/btnHome"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/n_icon_home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>